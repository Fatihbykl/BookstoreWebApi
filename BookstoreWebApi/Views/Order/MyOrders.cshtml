@model IList<BookstoreWebApi.Models.SiparisModel>
@{
    ViewBag.Title = "Siparişlerim";
}

<h2 class="mt-3 mb-3">Siparişlerim</h2>
<hr />

<table class="table bg-white">

    <thead class="table-dark">
        <tr>
            <th scope="col">Sipariş No</th>
            <th scope="col">Teslimat Adresi</th>
            <th scope="col">Sipariş Tarihi</th>
            <th scope="col">Sipariş Tutarı</th>
            <th scope="col">Sipariş İçeriği</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count != 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th>@item.SiparisNo</th>
                        <td>@item.TeslimatAdresi.Mahalle @item.TeslimatAdresi.Sokak @item.TeslimatAdresi.No @item.TeslimatAdresi.Ilce/@item.TeslimatAdresi.Il</td>
                        <td>@item.SiparisTarihi</td>
                        <td>@item.siparisTutari TL</td>
                        <td>
                            @foreach (var kitap in item.SiparisIcerigi)
                            {
                                <span>@kitap.KitapBaslik</span><br />
                            }
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

